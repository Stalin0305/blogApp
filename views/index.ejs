<%- include('partials/header')%>
    <!-- Style sheet -->
    <!-- <link rel="stylesheet" href="/css/index.css"> -->
    <!-- font awesome -->
    <script src="https://kit.fontawesome.com/f8bbb3c82f.js" crossorigin="anonymous"></script>
    
    <% blog.forEach(function(blog){ %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a href="/" class="navbar-brand"><i class="fab fa-blogger"></i> Blog</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id=navbarnav>
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/blogs/new">New post</a>
                        </li>
                    </ul>
                </div>
            </div>   
        </nav>
        <div>
            <h2> <%=blog.title%> </h2>
            <img src="<%=blog.img%>" alt="image">
            <h3> <%=blog.body%> </h3>
            <h3> <%=blog.created %> </h3>
        </div>
    <% }); %>

<%- include('partials/footer') %>